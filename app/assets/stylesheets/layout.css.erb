@media all {

	body { 
		background-color: #ffffff;
	}
   
	.container {
	    width: 929px; margin: 0 auto; 
	    overflow: hidden; display: block;
	}
	
	/*= header */
	
		header {
			overflow: hidden;
			padding: 30px 0;
		}
		
		header #hero {
			float: left;
		}
		
		header p {
			font-size: 14px;
		}
		
		header p strong {
			color: #489F00;
		}
		
		header #introduction {
			float: right;
			width: 600px;
			padding-top: 40px;
		}
		
	/*= main */

		#main {
			padding: 10px 0 30px;
		}

		#main #primary_content {
			padding: 20px 0;
			float: left;
			overflow: hidden;
			width: 100%;
		}
		
		#main #primary_content.panel {
			width: 600px; 
			float: left;
		}
		
		#main #primary_content.panel h2 {
			padding-top: 10px;
		}
	
		#main aside#secondary_content {
			float: right;
			width: 220px;
			padding-top: 27px;
		}
		
		#main aside#secondary_content h2 {
			margin-bottom: 30px;
			font-weight: 200;
		}
		
	/*= footer */
	
		footer {
			background: #4D4D4D;
			padding: 30px 0;
			color: #ffffff;
		}
		
		footer a {
			color: #ffffff;
			text-decoration: underline;
		}
		
		footer a:hover,
		footer a:active,
		footer a:focus {
			text-decoration: none;
		}

}
