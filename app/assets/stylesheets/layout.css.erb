@media all {

	body { 
		background-color: #ffffff;
	}
   
	.container {
	    width: 929px; margin: 0 auto; 
	    overflow: hidden; display: block;
	}
	
	/*= header */
	
		header {
			overflow: hidden;
		}
		
	/*= main */

		#main {
			padding: 10px 0 30px;
		}
	
		#main #primary_content {
			padding: 20px 0;
			float: left;
			overflow: hidden;
			width: 100%;
		}
	
		#main aside#secondary_content {
			float: right;
			width: 200px;
			padding-right: 20px;
		}
		
	/*= footer */
	
		footer {
			background: #4D4D4D;
			padding: 30px 0;
			color: #ffffff;
		}

}
